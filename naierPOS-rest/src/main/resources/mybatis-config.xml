	     <typeAlias type="com.joker.common.model.Brand" alias="brand" />
	     <typeAlias type="com.joker.common.model.Color" alias="color" />
	     <typeAlias type="com.joker.common.model.MaterialCategory" alias="materialCategory" />
	     <typeAlias type="com.joker.common.model.Size" alias="size" />
	     <typeAlias type="com.joker.common.model.Unit" alias="unit" />
	     <typeAlias type="com.joker.common.model.UnitConversion" alias="unitConversion" />
	</typeAliases>

    <plugins>
        <plugin interceptor="com.joker.core.interceptor.PageInterceptor">
            <property name="databaseType" value="mysql"/>
        </plugin>
    </plugins>
    
</configuration>